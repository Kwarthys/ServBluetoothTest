<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#888">



    <LinearLayout
        android:layout_width="fill_parent"
        android:id="@+id/layoutButtons"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:gravity="top">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bConnect"
            android:text="@string/Connecter"/>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bDisconnect"
            android:text="@string/Deconnecter"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textLog"
            android:textColor="#fff"
            android:layout_gravity="center"/>

    </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutButtons"
            android:id="@+id/layoutTrame">

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/switchSend"/>

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:id="@+id/spinner"> </Spinner>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonPlus"
                    android:text="+"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textValue"
                    android:gravity="center"
                    android:text="@string/hello_world"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonMoins"
                    android:text="-" />

                </LinearLayout>

        </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_below="@id/layoutTrame"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/layoutList"
        android:orientation="vertical">

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listTrames"> </ListView>


    </LinearLayout>


</RelativeLayout>
